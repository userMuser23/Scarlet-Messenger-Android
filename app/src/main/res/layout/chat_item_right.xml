<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:padding="8dp">    <TextView        android:id="@+id/show_message"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentEnd="true"        android:background="@drawable/background_right"        android:padding="8dp"        android:text="Hi there"        android:textColor="#fff"        android:textSize="18sp" />    <TextView        android:id="@+id/time_tv"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="12:00"        android:textSize="10sp"        android:textColor="@android:color/darker_gray"        android:layout_below="@id/show_message"        android:layout_alignEnd="@id/show_message"        android:layout_marginTop="2dp"/></RelativeLayout>